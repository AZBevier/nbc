@#
# Makefile for mkdep for running mkdep on mpx3x
# Object files must be produced and then cataloged
# on MPX3.X using the LD.MKDEP command file.
#
CC = nbcc
SLIB = /system/lib
CFLAGS = -C -1 -DMPX -M$(SLIB)/m.mpxmac3x -P$(SLIB)/mpxpre3x
SYSBIN = /system/bin
LBIN = ./mpx3x
INSTALL = cp
MOVE = mv
MAKEFILE = make.mpx3x

OBJS = mkdep.o
HDRS =
HD =
SRCS= mkdep.c
SRC= MKDEP.C
MAIN = $(OBJS)
SLD = ld.mkdep3x
LD = LD.MKDEP
SMK = mk.mkdep3x
MK = MK.MKDEP
SDOC = mkdep.m
DOC = MKDEP.M

all:	$(SLD) $(SMK) $(SDOC) $(MAIN)

$(MAIN):	$(MAKEFILE) $(HDRS) $(SRCS)
	$(SYSBIN)/$(CC) $(CFLAGS) $(SRCS)

clean:
	-rm -f *.o $(LBIN)/*.O

clobber: clean
	-rm -f $(LBIN)/MKDEP.O $(LBIN)/MKDEP.C $(LBIN)/$(LD)
	-rm -f $(LBIN)/$(MK) $(LBIN)/$(DOC) # $(LBIN)/$(HD)

install: all
	@@if [ -d $(LBIN) ]; then \
			echo "$(LBIN) already exits"; \
	else \
			mkdir $(LBIN); \
	fi;
	mpxblk <$(SRCS) >$(LBIN)/$(SRC)
#	mpxblk <$(HDRS) >$(LBIN)/$(HD)
	mpxblk <$(SLD) >$(LBIN)/$(LD)
	mpxblk <$(SMK) >$(LBIN)/$(MK)
	mpxblk <$(SDOC) >$(LBIN)/$(DOC)
	$(MOVE) mkdep.o $(LBIN)/MKDEP.O
	/bin/chmod 664 $(LBIN)/*.?

@
