1.2
log
@Change mpxmac location.
@
text
@#
# Makefile for cd for running cd on mpx3x
# Object files must be produced and then cataloged
# on MPX3.X using the LD.CD command file.
#
CC = nbcc
SLIB = /system/lib
SYSBIN = /system/bin
CFLAGS = -C -DMPX -M$(SYSBIN)/m.mpxmac3x -P$(SYSBIN)/mpxpre3x
LBIN = ./mpx3x
INSTALL = cp
MOVE = mv
MAKEFILE = make.mpx3x

OBJS = cd.o
HDRS =
HD =
SRCS= cd.c 
SRC= CD.C
MAIN = $(OBJS)
SLD = ld.cd3x
LD = LD.CD
SMK = mk.cd3x
MK = MK.CD
SDOC = cd.m
DOC = CD.M

all:	$(SLD) $(SMK) $(SDOC) mpxini.o $(MAIN)

$(MAIN):	$(MAKEFILE) $(HDRS) $(SRCS)
	$(SYSBIN)/$(CC) $(CFLAGS) $(SRCS)

mpxini.o:	$(MAKEFILE) $(HDRS) mpxini.c
	$(SYSBIN)/$(CC) $(CFLAGS) mpxini.c

clean:
	-rm -f *.o $(LBIN)/*.O

clobber: clean
	-rm -f $(LBIN)/*.O $(LBIN)/*.C $(LBIN)/$(LD)
	-rm -f $(LBIN)/$(MK) $(LBIN)/$(DOC) # $(LBIN)/$(HD)

install: all
	@@if [ -d $(LBIN) ]; then \
			echo "$(LBIN) already exits"; \
	else \
			mkdir $(LBIN); \
	fi;
	mpxblk <$(SRCS) >$(LBIN)/$(SRC)
	mpxblk <mpxini.c >$(LBIN)/MPXINI.C
#	mpxblk <$(HDRS) >$(LBIN)/$(HD)
	mpxblk <$(SLD) >$(LBIN)/$(LD)
	mpxblk <$(SMK) >$(LBIN)/$(MK)
	mpxblk <$(SDOC) >$(LBIN)/$(DOC)
	$(MOVE) cd.o $(LBIN)/CD.O
	$(MOVE) mpxini.o $(LBIN)/MPXINI.O
	/bin/chmod 664 $(LBIN)/*.?

@


