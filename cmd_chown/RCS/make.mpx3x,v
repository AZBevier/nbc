1.2
log
@Change mpxmac location.
@
text
@#
# Makefile for chown for running chown on mpx3x
# Object files must be produced and then cataloged
# on MPX3.X using the LD.CHOWN command file.
#
CC = nbcc
SLIB = /system/lib
SYSBIN = /system/bin
CFLAGS = -C -DMPX -M$(SYSBIN)/m.mpxmac3x -P$(SYSBIN)/mpxpre3x
LBIN = ./mpx3x
INSTALL = cp
MOVE = mv
MAKEFILE = make.mpx3x

OBJS = chown.o
HDRS =
SRCS= chown.c
MAIN = $(OBJS)
SLD = ld.chown3x
LD = LD.CHOWN
SMK = mk.chown3x
MK = MK.CHOWN
SDOC = chown.m
DOC = CHOWN.M

all:	$(SLD) $(SMK) $(SDOC) $(MAIN)

$(MAIN):	$(MAKEFILE) $(SRCS)
	$(SYSBIN)/$(CC) $(CFLAGS) $(SRCS)

clean:
	-rm -f *.o $(LBIN)/*.O

clobber: clean
	-rm -f $(LBIN)/CHOWN.O $(LBIN)/CHOWN.C $(LBIN)/$(LD)
	-rm -f $(LBIN)/$(MK) $(LBIN)/$(DOC)

install: all
	@@if [ -d $(LBIN) ]; then \
			echo "$(LBIN) already exits"; \
	else \
			mkdir $(LBIN); \
	fi;
	mpxblk <chown.c >$(LBIN)/CHOWN.C
	mpxblk <$(SLD) >$(LBIN)/$(LD)
	mpxblk <$(SMK) >$(LBIN)/$(MK)
	mpxblk <$(SDOC) >$(LBIN)/$(DOC)
	$(MOVE) chown.o $(LBIN)/CHOWN.O
	/bin/chmod 664 $(LBIN)/*.?

@


