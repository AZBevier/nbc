1.2
log
@CHange mpxmac location.
@
text
@#
# Makefile for cp for running cp on mpx3x
# Object files must be produced and then cataloged
# on MPX3.X using the LD.CP command file.
#
CC = nbcc
SLIB = /system/lib
SYSBIN = /system/bin
CFLAGS = -C -DMPX -M$(SYSBIN)/m.mpxmac3x -P$(SYSBIN)/mpxpre3x
LBIN = ./mpx3x
INSTALL = cp
MOVE = mv
MAKEFILE = make.mpx3x

OBJS = cp.o
HDRS =
SRCS= cp.c
MAIN = $(OBJS)
SLD = ld.cp3x
LD = LD.CP
SMK = mk.cp3x
MK = MK.CP
SDOC = cp.m
DOC = CP.M

all:	$(SLD) $(SMK) $(SDOC) $(MAIN)

$(MAIN):	$(MAKEFILE) $(SRCS)
	$(SYSBIN)/$(CC) $(CFLAGS) $(SRCS)

clean:
	-rm -f *.o $(LBIN)/*.O

clobber: clean
	-rm -f $(LBIN)/CP.O $(LBIN)/CP.C $(LBIN)/$(LD)
	-rm -f $(LBIN)/$(MK) $(LBIN)/$(DOC)

install: all
	@@if [ -d $(LBIN) ]; then \
			echo "$(LBIN) already exits"; \
	else \
			mkdir $(LBIN); \
	fi;
	mpxblk <cp.c >$(LBIN)/CP.C
	mpxblk <$(SLD) >$(LBIN)/$(LD)
	mpxblk <$(SMK) >$(LBIN)/$(MK)
	mpxblk <$(SDOC) >$(LBIN)/$(DOC)
	$(MOVE) cp.o $(LBIN)/CP.O
	/bin/chmod 664 $(LBIN)/*.?

@


1.1
