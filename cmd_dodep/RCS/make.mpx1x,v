1.2
log
@Change mpxmac location.
@
text
@#
# Makefile for dodep for running dodep on mpx1x
# Object files must be produced and then cataloged
# on MPX1.X using the LD.DODEP command file.
#
CC = nbcc
SLIB = /system/lib
SYSBIN = /system/bin
CFLAGS = -C -1 -DMPX -DMPX1X -M$(SYSBIN)/m.mpxmac1x -P$(SYSBIN)/mpxpre1x
LBIN = ./mpx1x
INSTALL = cp
MOVE = mv
MAKEFILE = make.mpx1x

OBJS = dodep.o
HDRS =
SRCS= dodep.c
MAIN = $(OBJS)
SLD = ld.dodep1x
LD = LD.DODEP
SMK = mk.dodep1x
MK = MK.DODEP
SDOC = dodep.m
DOC = DODEP.M

all:	$(SLD) $(SMK) $(SDOC) $(MAIN)

$(MAIN):	$(MAKEFILE) $(SRCS)
	$(SYSBIN)/$(CC) $(CFLAGS) $(SRCS)

clean:
	-rm -f *.o $(LBIN)/*.O

clobber: clean
	-rm -f $(LBIN)/DODEP.O $(LBIN)/DODEP.C $(LBIN)/$(LD)
	-rm -f $(LBIN)/$(MK) $(LBIN)/$(DOC)

install: all
	@@if [ -d $(LBIN) ]; then \
			echo "$(LBIN) already exits"; \
	else \
			mkdir $(LBIN); \
	fi;
	mpxblk <dodep.c >$(LBIN)/DODEP.C
	mpxblk <$(SLD) >$(LBIN)/$(LD)
	mpxblk <$(SMK) >$(LBIN)/$(MK)
	mpxblk <$(SDOC) >$(LBIN)/$(DOC)
	$(MOVE) dodep.o $(LBIN)/DODEP.O
	/bin/chmod 664 $(LBIN)/*.?

@


